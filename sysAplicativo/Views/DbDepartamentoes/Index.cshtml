@model IEnumerable<SysAplicativo.Models.DbDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<p>
    <a asp-action="Create">Criar novo departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomedepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricaodepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idlocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomedepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaodepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idlocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
